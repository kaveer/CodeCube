<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="CubeNotes.MainPage"
       BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#0D0D0D}">

 <ScrollView>
        <VerticalStackLayout Padding="32,80,32,60" Spacing="48" VerticalOptions="Center">

      <!-- Hero Section -->
<VerticalStackLayout Spacing="32" HorizontalOptions="Center">
   <!-- App Icon with Modern Gradient -->
       <Border WidthRequest="140"
    HeightRequest="140"
       StrokeShape="RoundRectangle 36"
   StrokeThickness="0"
      HorizontalOptions="Center">
    <Border.Background>
     <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#6366F1" Offset="0.0"/>
     <GradientStop Color="#8B5CF6" Offset="0.5"/>
       <GradientStop Color="#EC4899" Offset="1.0"/>
       </LinearGradientBrush>
    </Border.Background>
    <Border.Shadow>
      <Shadow Brush="#6366F140"
     Offset="0,16"
       Radius="40"
      Opacity="1"/>
      </Border.Shadow>
    <Label Text="📝"
FontSize="72"
     HorizontalOptions="Center"
        VerticalOptions="Center"/>
 </Border>

 <!-- Title Section -->
  <VerticalStackLayout Spacing="16" HorizontalOptions="Center">
    <Label Text="CubeNotes"
      FontSize="40"
  FontAttributes="Bold"
    TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#FFFFFF}"
     HorizontalTextAlignment="Center"/>

   <Label Text="Your thoughts, beautifully organized"
    FontSize="18"
         TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
   HorizontalTextAlignment="Center"
  Padding="20,0"/>
   </VerticalStackLayout>
</VerticalStackLayout>

<!-- Feature Highlights -->
 <VerticalStackLayout Spacing="20">
    <!-- Feature 1 -->
  <Border Background="{AppThemeBinding Light=#FFFFFF, Dark=#1A1A1A}"
     Padding="24,20"
     StrokeShape="RoundRectangle 18"
      StrokeThickness="0">
     <Border.Shadow>
<Shadow Brush="{AppThemeBinding Light=#00000012, Dark=#00000035}"
   Offset="0,6"
  Radius="20"
      Opacity="1"/>
   </Border.Shadow>
   <Grid ColumnDefinitions="Auto,*" ColumnSpacing="20">
  <Border Grid.Column="0"
     WidthRequest="64"
  HeightRequest="64"
StrokeShape="RoundRectangle 16"
  StrokeThickness="0">
   <Border.Background>
  <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
  <GradientStop Color="#6366F125" Offset="0.0"/>
     <GradientStop Color="#8B5CF625" Offset="1.0"/>
   </LinearGradientBrush>
      </Border.Background>
  <Label Text="✨"
   FontSize="32"
       HorizontalOptions="Center"
  VerticalOptions="Center"/>
       </Border>
    <VerticalStackLayout Grid.Column="1" Spacing="8" VerticalOptions="Center">
      <Label Text="Smart Organization"
      FontSize="20"
 FontAttributes="Bold"
   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#FFFFFF}"/>
 <Label Text="Tag and categorize notes effortlessly"
   FontSize="15"
    TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
     LineBreakMode="WordWrap"/>
    </VerticalStackLayout>
       </Grid>
     </Border>

       <!-- Feature 2 -->
  <Border Background="{AppThemeBinding Light=#FFFFFF, Dark=#1A1A1A}"
      Padding="24,20"
   StrokeShape="RoundRectangle 18"
      StrokeThickness="0">
     <Border.Shadow>
     <Shadow Brush="{AppThemeBinding Light=#00000012, Dark=#00000035}"
  Offset="0,6"
      Radius="20"
    Opacity="1"/>
      </Border.Shadow>
     <Grid ColumnDefinitions="Auto,*" ColumnSpacing="20">
        <Border Grid.Column="0"
   WidthRequest="64"
 HeightRequest="64"
 StrokeShape="RoundRectangle 16"
     StrokeThickness="0">
         <Border.Background>
   <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
       <GradientStop Color="#EC489925" Offset="0.0"/>
     <GradientStop Color="#F4724625" Offset="1.0"/>
   </LinearGradientBrush>
      </Border.Background>
      <Label Text="🎨"
     FontSize="32"
   HorizontalOptions="Center"
       VerticalOptions="Center"/>
     </Border>
      <VerticalStackLayout Grid.Column="1" Spacing="8" VerticalOptions="Center">
 <Label Text="Beautiful Design"
     FontSize="20"
   FontAttributes="Bold"
       TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#FFFFFF}"/>
 <Label Text="Modern interface with custom colors"
    FontSize="15"
    TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
   LineBreakMode="WordWrap"/>
 </VerticalStackLayout>
        </Grid>
    </Border>

    <!-- Feature 3 -->
 <Border Background="{AppThemeBinding Light=#FFFFFF, Dark=#1A1A1A}"
         Padding="24,20"
   StrokeShape="RoundRectangle 18"
  StrokeThickness="0">
          <Border.Shadow>
   <Shadow Brush="{AppThemeBinding Light=#00000012, Dark=#00000035}"
      Offset="0,6"
    Radius="20"
  Opacity="1"/>
        </Border.Shadow>
   <Grid ColumnDefinitions="Auto,*" ColumnSpacing="20">
     <Border Grid.Column="0"
   WidthRequest="64"
HeightRequest="64"
     StrokeShape="RoundRectangle 16"
      StrokeThickness="0">
     <Border.Background>
      <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
 <GradientStop Color="#10B98125" Offset="0.0"/>
         <GradientStop Color="#05966925" Offset="1.0"/>
   </LinearGradientBrush>
 </Border.Background>
  <Label Text="🔍"
   FontSize="32"
 HorizontalOptions="Center"
   VerticalOptions="Center"/>
   </Border>
 <VerticalStackLayout Grid.Column="1" Spacing="8" VerticalOptions="Center">
   <Label Text="Quick Search"
    FontSize="20"
        FontAttributes="Bold"
   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#FFFFFF}"/>
       <Label Text="Find any note instantly"
     FontSize="15"
  TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
         LineBreakMode="WordWrap"/>
   </VerticalStackLayout>
     </Grid>
      </Border>
  </VerticalStackLayout>

    <!-- Footer -->
 <VerticalStackLayout Spacing="12" HorizontalOptions="Center" Margin="0,32,0,0">
     <Label Text="Version 1.0.0"
        FontSize="14"
     TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
        HorizontalTextAlignment="Center"/>
   <Label Text="Built with .NET MAUI 9"
     FontSize="13"
       TextColor="{AppThemeBinding Light=#D1D5DB, Dark=#4B5563}"
         HorizontalTextAlignment="Center"/>
      </VerticalStackLayout>
 </VerticalStackLayout>
    </ScrollView>
</ContentPage>
